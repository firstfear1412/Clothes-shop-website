<script>
    window.addEventListener('resize', function () {
        var section = document.getElementById('mySection');
        var screenWidth = window.innerWidth;
        if (screenWidth < 768) { // ความกว้างของหน้าจอเล็กกว่า sm (576px)
            section.style.setProperty('height', 'unset', 'important');

        } else {
            section.style.setProperty('height', '90vh', 'important');

        }
    });
</script>